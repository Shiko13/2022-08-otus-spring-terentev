<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionDaoJDBC" class="ru.otus.spring.dao.QuestionDaoJDBC">
        <constructor-arg name="path" value="/quiz.csv"/>
    </bean>

    <bean id="questionServiceImpl" class="ru.otus.spring.service.QuestionServiceImpl">
        <constructor-arg name="dao" ref="questionDaoJDBC"/>
    </bean>
</beans>